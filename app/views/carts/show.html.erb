
<br>
<div class="cart-container">
    <ul class="cart">
      <% @cart.line_items.each do |line_item| %>
        <li >
          <div id="item-image">
              <img src="<%= line_item.product.image%>" alt=""> 
          </div>
          <div id="item-description">
              <h5><%= line_item.product.name %> </h5>
              <span>Price: <%= number_to_currency(line_item.product.price) %></span> 
          </div>
          <div id="item-logic">
            <%= link_to line_item_reduce_path(:id => line_item), method: :post do %>
              <%= fa_icon "minus" %>
            <% end %>
            <span><%= line_item.quantity %></span>
            <%= link_to line_item_add_path(:id => line_item), method: :post do %>
              <%= fa_icon "plus" %>
            <%end%>
            <%= link_to line_item_path(line_item), method: :delete do %>
              <%= fa_icon "trash" %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="subtotal">
      <h3>SUBTOTAL: <%= number_to_currency(@cart.sub_total) %></h3>
      <div class="subtotal-buttons">
          <%= button_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>
          <%= button_to "Checkout", new_order_path %>
      </div>
    </div>
</div>

