<div>
    <h1>SignUp</h1>
    <%= form_tag "/users", method: :post, class: "field" do%>
        <%= label_tag :first_name, class: "control" %>
        <%= text_field_tag "user[first_name]" %>

        <%= label_tag :last_name, class: "control" %>
        <%= text_field_tag "user[last_name]" %>

        <%= label_tag :email, class: "control" %>
        <%= text_field_tag "user[email]" %>

        <%= label_tag :password, class: "control" %>
        <%= text_field_tag "user[password]" %>

        <%= label_tag :password_confirmation , class: "control"%>
        <%= text_field_tag "user[password_confirmation]" %>

        <%= submit_tag 'Create Account'%>
    <% end %>
</div>